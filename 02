#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i, n = 100, array[100], choice = 1, check, check01, check02, check03,check04,x=0;
    do
    {
        printf("Select array size:\n1)Random size\n2)Your size\n");
        check = scanf_s("%d", &choice);
        while (getchar() != '\n');
        if (check == 1)
        {
            switch (choice)
            {
            case 1:
                do
                {
                    printf("Enter the number of array elements: \n");
                    check01 = scanf_s("%d", &n);
                    while (getchar() != '\n');
                    if (check01 == 1)
                    {
                        for (i = 0; i < n; i++)
                        {
                            array[i] = rand() % 100 - 35; // диапазон случайных чисел от 0 до 100
                            printf(" %d ", array[i]);
                        }
                        for (int i = 0; i < n; i++)
                        {
                            array[x] = array[i];
                            if ((i-1) % 2 != 0)
                                x++;
                        }
                        printf("\n");
                        for (int i = x; i < n; i++)
                            array[i] = 0;
                        for (int i = 0; i < x; i++)
                            printf(" %d", array[i]);
                        return 0;
                    }
                } while (check01 != 1);
                break;
            case 2:
                do {
                    printf("Enter the number of array elements: \n");
                    check02 = scanf_s("%d", &n);
                    while (getchar() != '\n');
                    if (check02 == 1)
                    {
                        for (int i = 0; i < n; i++)
                        {
                            printf("Enter array elements: \n");
                            do {
                                check04 = scanf_s("%d", &array[i]);
                                while (getchar() != '\n');
                            } while (check04 != 1);
                        }
                       /* printf("Enter array elements: \n");
                        for (int i = 0; i < n; i++)
                        {
                            scanf_s("%d", &array[i]);
                        }
                        for (int i = 0; i < n; i++)
                        {
                            printf("%d ", array[i]);
                        }*/
                        for (int i = 0; i < n; i++)
                        {
                            array[x] = array[i];
                            if ((i - 1) % 2 != 0)
                                x++;
                        }
                        printf("\n");
                        for (int i = x; i < n; i++)
                            array[i] = 0;
                        for (int i = 0; i < x; i++)
                            printf(" %d", array[i]);
                        return 0;
                    }
                } while (check02 != 1);
                break;
            }
        }
    } while (check != 1);
  return 0;
}
